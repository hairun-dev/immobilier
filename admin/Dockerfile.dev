FROM node:14-alpine as develop-stage

ARG GOOGLE_API_KEY
ARG API_BASE_URL
ARG API_BASE_URL_V1

WORKDIR /admin

COPY package*.json ./

RUN yarn global add @quasar/cli

COPY . .

# build stage
FROM develop-stage as build-stage

RUN yarn

RUN quasar build

# Ã©tape de production
FROM nginx:stable-alpine as production-stage

COPY --from=build-stage /admin/dist/spa /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]