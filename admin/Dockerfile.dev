FROM node:latest as build-stage
WORKDIR /admin

COPY package*.json ./

COPY . .

RUN npm install

RUN npm install -g @vue/cli

RUN npm install -g @quasar/cli 

RUN quasar build

FROM nginx as production-stage

COPY --from=build-stage /admin/dist/spa /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]